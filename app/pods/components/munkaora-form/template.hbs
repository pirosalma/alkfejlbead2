<form class="form-horizontal" method="post">
    <div class="form-group">
      <label for="leiras" class="col-lg-2 control-label">Munka leírása: </label>
      <div class="col-lg-10">
        <textarea class="form-control" 
               name="leiras" id="leiras" 
               placeholder="Írja le, hogy milyen munkát végzett..."></textarea>
      </div>
    </div>
    <div class="form-group">
      <label for="datetimepicker0" class="col-lg-2 control-label">Nap: </label>
      <div class="col-lg-10">
        <div id="datetimepicker0" class="input-group date">
          <input type="text" name="nap" class="form-control" />
          <div class="input-group-addon">
              <span class="glyphicon glyphicon-th"></span>
          </div>
        </div>
      </div>
    </div>
    <!--<input type="hidden" name="nap" id="datetimepicker0_hidden"/>-->
    
    <div class="form-group">
      <label for="datetimepicker1" class="col-lg-2 control-label">Mettol: </label>
      <div class="col-lg-10">
        <div id="datetimepicker1" class="input-group clockpicker">
            <input type="text" name="mettol" class="form-control">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-time"></span>
            </span>
        </div>
      </div>
    </div>
    
    <div class="form-group">
      <label for="datetimepicker2" class="col-lg-2 control-label">Meddig: </label>
      <div class="col-lg-10">
        <div id="datetimepicker2" class="input-group clockpicker">
            <input type="text" name="meddig" class="form-control">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-time"></span>
            </span>
        </div>
      </div>
    </div>
        
    <div class="form-group">
        <button {{action "onSubmit"}} class="btn btn-primary">Submit</button>
    </div>
</form>